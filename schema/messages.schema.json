{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ticker Messages Schema",
  "type": "object",
  "required": ["messages"],
  "properties": {
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "text"],
        "properties": {
          "type": { "type": "string" },
          "text": { "type": "string" },
          "priority": { "type": ["integer", "number" ] },
          "link": { "type": ["string", "null"] },
          "createdAt": { "type": ["string", "number"] },
          "mode": { "type": ["string", "null"] }
        },
        "additionalProperties": true
      }
    },
    "categories": { "type": ["array", "null"] },
    "settings": { "type": ["object", "null"] },
    "lastUpdated": { "type": ["string", "number", "null"] },
    "version": { "type": ["string", "null"] },
    "meta": { "type": ["object", "null"] }
  },
  "additionalProperties": true
}

